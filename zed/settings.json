{
	"ssh_connections": [
		{
			"host": "pc",
			"projects": [
				{
					"paths": ["/home/AceofStades/code/Forest-Fire"]
				}
			]
		}
	],
	"features": {
		"edit_prediction_provider": "zed"
	},
	"agent": {
		"default_model": {
			"provider": "copilot_chat",
			"model": "gpt-4o"
		}
	},
	"base_keymap": "VSCode",
	"theme": "Monokai Charcoal (gray)",
	"buffer_font_family": "JetBrains Mono",
	"ui_font_family": "JetBrainsMono Nerd Font",
	"telemetry": {
		"diagnostics": false,
		"metrics": true
	},
	"hard_tabs": true,
	"tab_size": 4,
	"vim_mode": true,
	"ui_font_size": 15,
	"buffer_font_size": 14,
	"always_treat_brackets_as_autoclosed": true,
	"relative_line_numbers": true,
	"terminal": {
		"blinking": "terminal_controlled",
		"copy_on_select": false,
		"shell": {
			"program": "zsh"
		},
		"working_directory": "current_project_directory",
		"default_height": 8000
	},
	"lsp": {
		"clang": {}
	},
	"experimental.theme_overrides": {
		"renamed.background": "#FFFFFF20",
		"search.match_background": "#FFFFFF20",
		"ghost_element.background": "#00000010",
		"ghost_element.hover": "#00000099",
		"background.appearance": "blurred",
		"background": "#000000b3",
		"editor.background": "#00000000",
		"editor.gutter.background": "#00000000",
		"title_bar.background": "#000000bb",
		"toolbar.background": "#00000010",
		"terminal.background": "#FFFFFF02",
		"status_bar.background": "#000000bb",
		"tab.active_background": "#96969630",
		"tab.inactive_background": "#00000000",
		"tab_bar.background": "#00000010",
		"panel.background": "#00000000",
		"border": "#96969610",
		"border.variant": "#96969610",
		"scrollbar.track.border": "#00000000",
		"scrollbar.track.background": "#00000000",
		// "scrollbar.thumb.background": "#00000000",
		// "scrollbar.thumb.border": "#FFFFFF90",
		"editor.active_line.background": "#96969644",
		"panel.overlay_background": "#00000000",
		"pane.focused_border": "#00000000",
		"elevated_surface.background": "#000000ee"
	}
}
