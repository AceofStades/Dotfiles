     	"using namespace std;",
      	"",
       	"int main() {",
        "\tios_base::sync_with_stdio(false);",
        "\tcin.tie(nullptr);",
        "\tint t;",
        "\tcin >> t;",
        "\twhile(t >= 0) {",
     	"\t\t$0",
        "\t\tt--;",
        "\t}",
      	"}"
    ],
    "description": "Starter code for competitive programming"
  }
}
