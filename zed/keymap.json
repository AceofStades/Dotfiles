[
	{
		"context": "Picker || menu",
		"bindings": {
			"shift-tab": "menu::SelectPrevious",
			"tab": "menu::SelectNext"
		}
	},
	{
		"context": "ProjectSearchBar > Editor",
		"bindings": {
			"shift-tab": "search::PreviousHistoryQuery",
			"tab": "search::NextHistoryQuery"
		}
	},
	{
		"context": "Editor && (showing_code_actions || showing_completions)",
		"bindings": {
			"shift-tab": "editor::ContextMenuPrevious",
			"tab": "editor::ContextMenuNext"
		}
	},
	{
		"context": "Workspace",
		"bindings": {
			"ctrl-/": "terminal_panel::ToggleFocus"
		}
	},
	{
		"context": "Terminal",
		"bindings": {
			"ctrl-/": "workspace::ToggleBottomDock",
			"alt-t": "workspace::NewTerminal",
			"ctrl-w": "pane::CloseActiveItem"
		}
	},
	{
		"context": "Editor",
		"bindings": {
			"alt-k": "editor::MoveLineUp",
			"alt-j": "editor::MoveLineDown",
			"ctrl-/": "terminal_panel::ToggleFocus"
		}
	},
	{
		"context": "Picker > Editor",
		"bindings": {
			"shift-enter": "picker::ConfirmCompletion",
			"tab": "menu::SelectNext",
			"shift-tab": "menu::SelectPrevious",
			"alt-enter": ["picker::ConfirmInput", { "secondary": false }]
		}
	},
	{
		"context": "FileFinder && !menu_open",
		"bindings": {
			"ctrl-j": "pane::SplitDown",
			"ctrl-k": "pane::SplitUp",
			"ctrl-h": "pane::SplitLeft",
			"ctrl-l": "pane::SplitRight"
		}
	},
	{
		"context": "Editor && showing_completions",
		"bindings": {
			"enter": "editor::ConfirmCompletion",
			"shift-enter": "editor::ComposeCompletion"
		}
	},
	{
		"context": "Editor && edit_prediction && !showing_completions",
		"bindings": {
			"shift-enter": "editor::AcceptEditPrediction"
		}
	},
	{
		"context": "Editor && vim_mode == normal",
		"bindings": {
			"space": null,
			"space space": "file_finder::Toggle",
			"ctrl-w": "pane::CloseActiveItem",
			"space e": "workspace::ToggleLeftDock"
		}
	},
	{
		"context": "BufferSearchBar",
		"bindings": {
			"ctrl-h": "workspace::SwapPaneLeft"
		}
	},
	{
		"context": "ProjectPanel && not_editing || CollabPanel || OutlinePanel || ChatPanel || VimControl || EmptyPane || SharedScreen || MarkdownPreview || KeyContextView",
		"bindings": {
			"ctrl-h": "workspace::ActivatePaneLeft",
			"ctrl-l": "workspace::ActivatePaneRight",
			"ctrl-k": "workspace::ActivatePaneUp",
			"ctrl-j": "workspace::ActivatePaneDown",
			"shift-l": "vim::ResizePaneRight",
			"shift-h": "vim::ResizePaneLeft",
			"shift-k": "vim::ResizePaneDown",
			"shift-j": "vim::ResizePaneUp",
			"ctrl-shift-h": "workspace::SwapPaneLeft",
			"ctrl-shift-l": "workspace::SwapPaneRight",
			"ctrl-shift-k": "workspace::SwapPaneUp",
			"ctrl-shift-j": "workspace::SwapPaneDown",
			"space c": "workspace::ToggleRightDock",
			"space e": "workspace::ToggleLeftDock"
		}
	},
	{
		"context": "ProjectPanel && not_editing",
		"bindings": {
			"a": "project_panel::NewFile",
			"r": "project_panel::Rename",
			"d": ["project_panel::Trash", { "skip_prompt": false }]
		}
	}
]
